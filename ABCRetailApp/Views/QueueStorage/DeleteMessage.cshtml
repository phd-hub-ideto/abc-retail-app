@model Tuple<string, string>

<h2>Delete Queue Message</h2>

<div>
    <h4>Are you sure you want to delete this message?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Message ID
        </dt>
        <dd class="col-sm-10">
            @Model.Item1
        </dd>
        <dt class="col-sm-2">
            Pop Receipt
        </dt>
        <dd class="col-sm-10">
            @Model.Item2
        </dd>
    </dl>

    <form asp-action="DeleteMessageConfirmed" method="post">
        <input type="hidden" name="messageId" value="@Model.Item1" />
        <input type="hidden" name="popReceipt" value="@Model.Item2" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
