@model IEnumerable<CustomerProfile>

@{
    ViewData["Title"] = "Customers";
}

<h1 class="text-center">Customer Profiles</h1>

<div class="text-center mb-3">
    <a href="/CustomerProfile/Create" class="btn btn-primary">Add New Customer</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <td>Id</td>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.RowKey</td>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>
                    <a href="/CustomerProfile/ViewProfile?partitionKey=@customer.PartitionKey&rowKey=@customer.RowKey" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>